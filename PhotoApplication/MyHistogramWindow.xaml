<Window x:Class="PhotoApplication.MyHistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoApplication"
        mc:Ignorable="d"
        Title="Histogram" Height="300" Width="540" BorderBrush="#BF0A9F00" ResizeMode="NoResize" Topmost="True" Icon="photos.ico" Closing="Window_Closing">
    <Grid x:Name="myHistWnd" Height="270" Margin="0" Width="534">
        <Border BorderThickness="1" BorderBrush="#FF0003FF" Margin="12,10,10,56"  RenderTransformOrigin="0.509,0.213">
            <Canvas x:Name="histogramImage" HorizontalAlignment="Center" Height="202" Margin="-0.8,0,-0.4,0" VerticalAlignment="Top" Width="510" OpacityMask="White" Background="White"/>
        </Border>
        <Image x:Name="image1" HorizontalAlignment="Center" Height="45" Margin="0,0,0,12" VerticalAlignment="Bottom" Source="hsvbar.jpg" Stretch="Fill" Width="510"/>

    </Grid>
</Window>
